{
  "manifest_version": 3,
  "name": "Product Analyzer - CJ Dropshipping & AliExpress",
  "version": "1.1.0",
  "description": "Overlay Google Ads keyword data and opportunity scores on CJ Dropshipping and AliExpress products",
  "permissions": [
    "activeTab",
    "storage",
    "scripting"
  ],
  "host_permissions": [
    "https://www.cjdropshipping.com/*",
    "https://developers.cjdropshipping.com/*",
    "https://www.aliexpress.com/*",
    "https://aliexpress.com/*",
    "https://*.aliexpress.com/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "https://www.cjdropshipping.com/*",
        "https://www.aliexpress.com/*",
        "https://aliexpress.com/*",
        "https://*.aliexpress.com/*"
      ],
      "js": ["google-ads-service.js", "content.js"],
      "css": ["content.css"],
      "run_at": "document_end"
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "Product Analyzer"
  },
  "web_accessible_resources": [
    {
      "resources": ["injected.js"],
      "matches": [
        "https://www.cjdropshipping.com/*",
        "https://www.aliexpress.com/*",
        "https://aliexpress.com/*",
        "https://*.aliexpress.com/*"
      ]
    }
  ]
}
